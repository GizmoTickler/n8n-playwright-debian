{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 6am on monday"
  ],
  "labels": ["dependencies"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "separateMinorPatch": true,
  "rangeStrategy": "pin",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",

  "packageRules": [
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "addLabels": ["github-actions"],
      "automerge": false,
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Auto-merge non-major Docker updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "addLabels": ["docker", "automerge"]
    },
    {
      "description": "Track n8n npm package",
      "matchPackageNames": ["n8n"],
      "addLabels": ["n8n"],
      "automerge": false,
      "groupName": "n8n core",
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Track Playwright",
      "matchPackageNames": ["playwright"],
      "addLabels": ["playwright"],
      "automerge": false
    },
    {
      "description": "Critical security updates - high priority",
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/",
      "vulnerabilitySeverity": "critical,high",
      "labels": ["security", "priority-high"],
      "automerge": true
    }
  ],

  "regexManagers": [
    {
      "description": "Track n8n npm package version in Dockerfile",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ARG N8N_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "npm",
      "depNameTemplate": "n8n"
    },
    {
      "description": "Track task-runner-launcher version in Dockerfile",
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ARG TASK_RUNNER_LAUNCHER_VERSION=(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "n8n-io/task-runner-launcher"
    }
  ],

  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": true,
    "schedule": ["at any time"]
  },

  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Renovate Dependency Dashboard",
  "dependencyDashboardHeader": "This dashboard tracks all dependency updates for n8n-playwright-debian.\n\n**Note:** Node version is automatically tracked via GitHub Actions from [n8n's upstream Dockerfile](https://github.com/n8n-io/n8n/blob/master/docker/images/n8n/Dockerfile) (not shown here).",

  "suppressNotifications": ["prIgnoreNotification"]
}
